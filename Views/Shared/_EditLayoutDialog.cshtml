@model BookManagementWeb.Models.Entities.Sach;
<!-- Modal -->

<form asp-action="Create" asp-controller="Sach" enctype="multipart/form-data" method="post"
      style="display:flex; flex-direction:column; justify-content:space-between; align-items:center; height:inherit; width:100%;
       transform:translateY(-20px); ">
    @* transform:translate(-30px,15px);*@
    <div style=" height: inherit; width: 50%; display:flex; flex-direction:row; align-items:center; justify-content: center;
                       ">
        @*style=" transform: translateX(-80px);"*@
        <div class="form-group col-4 p-0">
            <label class="control-label"></label>

            @*<img src="~/images/@Model.PhotoUrl" />*@
            @*            <img src="~/images/2407f42e-a5e4-4872-bfde-3a9650c3612a_IELTS-trainer.png"/>
            *@            
            <img id="PreviewPhoto" src="@Url.Content($"~/images/{Model.PhotoUrl}")" alt="Logo Image"
                               style="width:250px; height:260px; border: 2px solid #333333; border-radius:5px;" />


            <span asp-validation-for="PhotoUrl" class="text-danger"></span>

        </div>

        <div class="col-1 p-0">
        </div>

        <div class="form-group col-7 p-0" style="transform:translate(170px, 80px);">
            <div class="input-group custom-file-button mt-5 pt-5">
                <input style="font-size:12px;" asp-for="ProfilePhoto" class="form-control custom-file-input" id="customFile">
            </div>
        </div>

        <div class="form-group pt-0 mt-0">
            <div ID="HiddenDiv" style="visibility: hidden;">
                <input asp-for="PhotoUrl" id="PhotoUrl" value="" />
            </div>
        </div>

    </div>

    <div style="height: inherit; width: 50%; margin-top: 180px; transform:translate(-100px,-160px);">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <div style="width: 150%; display:flex; flex-direction:row; justify-content:space-around;">
                <div class="form-group" style="width: 65%; margin-right: 10px;">
                    <label asp-for="MaSach" class="control-label" style="font-size:18px; margin-bottom:5px; font-weight:bold;">Mã sách</label>
                    <input type="number" asp-for="MaSach" class="form-control input-lg" style="height:40px; font-size: 17px;" />
                    <span asp-validation-for="MaSach" class="text-danger"></span>
                </div>

                <div class="form-group" style="width: 90%;">
                    <label asp-for="TenSach" class="control-label" style="font-size:18px; margin-bottom:5px; font-weight:bold;">Tên sách</label>
                    <input asp-for="TenSach" class="form-control input-lg" style="height:40px; font-size: 17px;" />
                    <span asp-validation-for="TenSach" class="text-danger"></span>
                </div>

            </div>
            <div style=" width: 190%; display:flex; flex-direction:row; justify-content:center; margin-top:15px;">
                <div class="form-group" style="width: 40%; margin-right:10px;">
                    <label asp-for="TacGia" class="control-label" style="font-size:18px; margin-bottom:5px; font-weight:bold;">Tác giả</label>
                    <input asp-for="TacGia" class="form-control input-lg" style="height:40px; font-size: 17px;" />
                    <span asp-validation-for="TacGia" class="text-danger"></span>
                </div>

                <div class="form-group" style="width: 40%; margin-right: 10px;">
                    <label asp-for="TheLoai" class="control-label" style="font-size:18px; margin-bottom:5px; font-weight:bold;">Thể loại</label>
                    <input asp-for="TheLoai" class="form-control input-lg" style="height:40px; font-size: 17px;" />
                    <span asp-validation-for="TheLoai" class="text-danger"></span>
                </div>

                <div class="form-group" style="width: 40%;">
                    <label asp-for="SoLuongSach" class="control-label" style="font-size:18px; margin-bottom:5px; font-weight:bold;">Số lượng sách</label>
                    <input asp-for="SoLuongSach" class="form-control input-lg" style="height:40px; font-size: 17px;" />
                    <span asp-validation-for="SoLuongSach" class="text-danger"></span>
                </div>
            </div>


        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg" style=" height:40px; width:120px; font-size:15px; font-weight:bold; text-align:center;  margin-top:28px; transform:translate(326px, -5px);">Cập nhập</button>
        </div>
    </div>

</form>





<!-- Add this to your layout or view -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha384-o6XZiVPKFIz8nKDDtbM1ohM5VrP5L07wByLlZq4lFgH/Wz5SPPAuyIUJEdlSlp1" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-GLhlTQ8iKu1rVpoDSTrL/J8WItUq4JgIE60RhB/O5z9gmvzDZ+qci7e9U5wqjib" crossorigin="anonymous"></script>

@section Scripts {
    <script>

        $(".custom-file-input").on("change", function () {

            var fileName = $(this).val().split("\\").pop();

            document.getElementById('PreviewPhoto').src = window.URL.createObjectURL(this.files[0]);

            document.getElementById('PhotoUrl').value = fileName;

        });
    </script>
}