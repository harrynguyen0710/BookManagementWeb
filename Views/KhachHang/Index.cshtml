@model IPagedList<BookManagementWeb.Models.Entities.KhachHang>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc;
@using X.PagedList;

<main>
    <h1>Danh sách thông tin khách hàng</h1>
    <ul class="box-info">
        <li>
            <img src="~/images/Cambridge-Grammar-for-IELTS.png" style="width=100px; height:150px;" />
            <span class="text">
                <h3>Dương Nhật Khoa</h3>
                <p>Khách hàng mới</p>
            </span>


        </li>
        <li>
            <img src="~/images/Cambridge-Grammar-for-IELTS.png" style="width=100px; height:150px;" />
            <span class="text">
                <h3>Nguyễn Ngọc Phú</h3>
                <p>Khách hàng mua nhiều nhất</p>
            </span>
        </li>
        <li>
            <img src="~/images/Cambridge-Grammar-for-IELTS.png" style="width=100px; height:150px;" />
            <span class="text">
                <h3>Đỗ Mạnh Hùng</h3>
                <p>Khách hàng nợ nhiều nhất</p>
            </span>
        </li>
    </ul>

    <div class="table-data" style="height:600px;">
        <div class="order">
            <div class="head">
                <h3>Khách Hàng</h3>
                <a asp-action="Create" asp-controller="KhachHang">
                    <i class='bx bx-plus' style="font-size:30px; color:green; font-weight: bold;"></i>
                </a>
                <i class='bx bx-filter' style="font-size:30px;"></i>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Mã khách hàng</th>
                        <th>Họ và tên</th>
                        <th>Giới tính</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <p style="cursor:pointer; font-size:18px;">@Html.DisplayFor(modelItem => item.MaKhachHang)</p>
                            </td>
                            <td style="font-size:18px;">@Html.DisplayFor(modelItem => item.HoVaTen)</td>
                            <td style="font-size:18px;">@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                            <td style="font-size:18px;">@Html.DisplayFor(modelItem => item.SDT)</td>
                            <td style="font-size:18px;">@Html.DisplayFor(modelItem => item.Email)</td>
                            <td style="font-size:18px;">@Html.DisplayFor(modelItem => item.DiaChi)</td>
                            <td style="transform:translateX(50px);">
                                <a style="background-color:#ffd717; color: #ffffff; font-weight: bold; border-radius: 15px; width: 85px; height: 43px; cursor: pointer; border: none; cursor:pointer; margin-right:14px; display: inline-flex; align-items: center; justify-content: center;"
                                   asp-action="Edit" asp-route-MaKhachHang="@item.MaKhachHang"> Sửa</a>
                                <a asp-action="Delete" asp-route-MaKhachHang="@item.MaKhachHang" style="background-color: #c92127; color: #ffffff; font-weight: bold; border-radius: 15px; cursor:pointer; width: 65px; height: 43px; border: none; display: inline-flex; align-items: center; justify-content: center;">
                                    Xoá
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>

    </div>
    <div class="container">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
    <style>
        .pagination-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px; /* Điều chỉnh khoảng cách từ bảng sách đến phân trang */
        }

        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
        }

            .pagination li {
                margin: 0 10px;
            }

            .pagination a {
                color: black;
                text-decoration: none;
                transition: background-color .3s;
                border: 1px solid #ddd;
                padding: 8px 16px;
                display: inline-block;
            }

            .pagination span {
                color: white;
                text-decoration: none;
                transition: background-color .3s;
                border: 1px solid #4CAF50;
                background-color: #4CAF50;
                padding: 8px 16px;
                display: inline-block;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }
    </style>

</main>